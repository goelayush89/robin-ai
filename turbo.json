{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "clean": {
      "cache": false
    },
    "@robin/core#build": {
      "outputs": ["dist/**"]
    },
    "@robin/ipc#build": {
      "dependsOn": ["@robin/core#build"],
      "outputs": ["dist/**"]
    },
    "@robin/ui#build": {
      "dependsOn": ["@robin/core#build"],
      "outputs": ["dist/**"]
    },
    "@robin/web#build": {
      "dependsOn": ["@robin/core#build", "@robin/ipc#build", "@robin/ui#build"],
      "outputs": ["dist/**"]
    },
    "@robin/desktop#build": {
      "dependsOn": ["@robin/core#build", "@robin/ipc#build"],
      "outputs": ["dist/**"]
    }
  }
}
