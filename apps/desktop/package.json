{
  "name": "@robin/desktop",
  "version": "0.0.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"npm run electron:dev\"",
    "build": "tsc && npm run copy-renderer",
    "build:watch": "tsc --watch",
    "copy-renderer": "xcopy src\\renderer dist\\renderer\\ /E /I /Y || robocopy src\\renderer dist\\renderer /E || echo 'Copy completed'",
    "electron:dev": "wait-on dist/main.js && electron .",
    "electron:pack": "electron-builder",
    "electron:dist": "npm run build && electron-builder",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@robin/core": "*",
    "@robin/ipc": "*",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.7",
    "electron-log": "^5.0.1",
    "node-machine-id": "^1.1.12",
    "crypto-js": "^4.2.0",
    "uuid": "^9.0.1",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@robin/tsconfig": "*",
    "@types/node": "^20.14.10",
    "@types/uuid": "^9.0.7",
    "@types/crypto-js": "^4.2.1",
    "@types/semver": "^7.5.6",
    "concurrently": "^8.2.2",
    "electron": "31.3.1",
    "electron-builder": "^24.13.3",
    "typescript": "^5.5.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.robin.assistant",
    "productName": "Robin Assistant",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
